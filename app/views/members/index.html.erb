<p id="notice"><%= notice %></p>
<div class="jumbotron">

  <h1>Members</h1>

  <table class="table table-bordered">
    <thead>
    <tr>
      <th>No</th>
      <th>Name</th>
      <th colspan="2"></th>
    </tr>
    </thead>

    <tbody>
    <% @members.each do |house| %>
        <tr>
          <td><%= house.no %></td>
          <td><%= house.name %></td>
          <td><%= link_to 'Show', member_url(house, subdomain: house.residence_association.subdomain) %></td>
          <% if house.residence_association.association_admin == current_association_admin %>
              <td><%= link_to 'Destroy', member_url(house, subdomain: house.residence_association.subdomain), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
    <% end %>
    </tbody>
  </table>

</div>