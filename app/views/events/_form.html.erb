

<div class="col-md-2"></div>
<div class="col-md-8 well">
  <%= form_for(event, multipart: true) do |f| %>
      <% if event.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

            <ul>
              <% event.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="field">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control', cols: '', rows: '12' %>
      </div>

      <div class="field">
        <%= f.label :poster %>
        <%= f.file_field :poster %>
      </div>

      <div class="field">
        <%= f.hidden_field :residence_association %>
      </div>

      <div class="actions">
        <%= f.submit  class: 'btn btn-primary' %>
      </div>
  <% end %>

</div>
