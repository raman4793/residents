<%= will_paginate @notifications %>
<% @notifications.each do |activity| %>
    <% activator = activity.activator_type.constantize %>
    <% eventable = activity.eventable_type.constantize %>
    <div class="row ">
      <div class="col-md-2"></div>
      <div class="col-md-8 well">
        <%= link_to_activator activity, activator %> <%= activity.content %> <%= link_to_eventable activity, eventable %>
      </div>
      <div class="col-md-2"></div>
    </div>
<% end %>
<%= will_paginate @notifications %>