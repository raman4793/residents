<div>
  <% @conversation.messages.each do |message| %>
      <p>
        <%= message.content %>
      </p>
  <% end %>
</div>
<%= form_for @conversation.messages.build do |f| %>
    <%= f.hidden_field :conversation_id, value: @conversation.id %>
    <%= f.text_field :content %>
    <%= f.submit 'Send' %>
<% end %>